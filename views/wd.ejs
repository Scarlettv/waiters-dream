      <div>
          <ul>
            <% for(var i=0; i < wd.length; i++) { %>
            <li class="sizes"> <%= wd[i].item %> - <%= wd[i].price %>$<button type="submit" id="<%= wd[i].id %>" class="deletebtn">x</button>
                <ul>
                    <di class="sizes"> <%= wd[i].notes %></di>
                </ul>
            </li>
                  <% } %>
          </ul>
      </div>
      <button type="submit" id="subbtn1" class="animated_div" onclick="window.location.href = '/cook' " />Submit</button>
