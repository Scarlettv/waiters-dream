        <input type="text" id="inputbar1" placeholder="Add New Item..." required>
        <input type="text" id="inputbar2" placeholder="Price" required>
              <input type="text" id="inputbar3" placeholder="Modify">
        <button type="submit" id="subbtn1">Add Item</button>
